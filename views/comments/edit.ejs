<% include ../partials/header %>

<div class="container">
    <div class="row p-5">
        <h1 class="mx-auto">Edit Comment</h1>
    </div>
    <div class="row">
        <div class="col-lg-4 mx-auto">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
              <div class="form-group">
                <label for="comment[text]">Comment</label>
                <input type="text" class="form-control" value="<%= comment.text %>" name="comment[text]">
              </div>
              <button type="submit" class="btn btn-primary btn-large float-right">Submit</button>
            </form>
            <div class="mt-3">
                <a href="/campgrounds">Go back to List</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>