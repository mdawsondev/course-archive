<% include ../partials/header %>

<div class="container">
    <div class="row p-5">
        <h1 class="mx-auto">Create new comment to <%= campground.name %></h1>
    </div>
    <div class="row">
        <div class="col-lg-4 mx-auto">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
              <div class="form-group">
                <label for="comment[text]">Comment</label>
                <input type="text" class="form-control" placeholder="I really liked it here." name="comment[text]">
              </div>
              <button type="submit" class="btn btn-primary btn-large float-right">Submit</button>
            </form>
            <div class="mt-3">
                <a href="/campgrounds">Go back to List</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>