<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our handpicked campgrounds from all over the world!</p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a New Campground</a>
    </header>
    
    <div class="row">
    <% campgrounds.forEach((campground) => { %>
        <div class="col-lg-3 col-md-6">
        <div class="card">
            <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
            <div class="card-body text-center">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-warning">More Info</a>
            </div>
        </div>
        </div>
    <% }); %>
    </div>
</div>
    
<%include ../partials/footer %>