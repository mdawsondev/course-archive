<% include ../partials/header %>

<div class="container">
    <div class="row p-5">
        <h1 class="mx-auto">Create a new campground!</h1>
    </div>
    <div class="row">
        <div class="col-lg-4 mx-auto">
            <form action="/campgrounds" method="POST">
              <div class="form-group">
                <label for="name">Location Name</label>
                <input type="text" class="form-control" placeholder="Magic Hiking Land" name="name">
              </div>
              <div class="form-group">
                <label for="price">Price</label>
                <input type="number" class="form-control" placeholder="50.00" min="0.01" step="0.01" name="price">
              </div>
              <div class="form-group">
                <label for="detail">Description</label>
                <input type="text" class="form-control" placeholder="A big magical place to hike. No bears." name="detail">
              </div>
              <div class="form-group">
                <label for="image">Sample Image</label>
                <input type="text" class="form-control" placeholder="Image URL" name="image">
              </div>
              <button type="submit" class="btn btn-primary btn-large float-right">Submit</button>
            </form>
            <div class="mt-3">
                <a href="/campgrounds">Go back to List</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>